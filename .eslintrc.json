{
  "env": {
    "amd": true,
    "browser": true,
    "commonjs": true,
    "es6": true,
    "jest": true,
    "node": true
  },
  "extends": ["react-app", "eslint:recommended", "plugin:react/recommended", "prettier"],
  "globals": {
    "alert": true,
    "APP_VERSION": true,
    "Atomics": "readonly",
    "beforeEach": true,
    "CONFIG": true,
    "describe": true,
    "document": true,
    "expect": true,
    "it": true,
    "PRODUCTION": true,
    "SharedArrayBuffer": "readonly",
    "window": true,
    "XMLHttpRequest": true
  },
  //  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["import", "react", "react-hooks"],
  "rules": {
    "import/first": ["error", "absolute-first"],
    "import/extensions": [
      "error",
      "never",
      {
        "action": "always",
        "Actions": "always",
        "actions": "always",
        "actionTypes": "always",
        "conf": "always",
        "api": "always",
        "constants": "always",
        "container": "always",
        "context": "always",
        "dev": "always",
        "functions": "always",
        "middleware": "always",
        "png": "always",
        "reducer": "always",
        "saga": "always",
        "sagas": "always",
        "thunk": "always",
        "thunks": "always",
        "scss": "always",
        "parser": "always",
        "selector": "always",
        "Selector": "always",
        "selectors": "always",
        "select": "always",
        "service": "always",
        "services": "always",
        "validator": "always",
        "utils": "always",
        "util": "always",
        "svg": "always",
        "gif": "always",
        "normalizers": "always",
        "json": "always",
        "jpg": "always"
      }
    ],
    "linebreak-style": "off",
    "no-console": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react-hooks/rules-of-hooks": "error",
    "react/forbid-prop-types": 2,
    "react/no-array-index-key": 2,
    "react/no-unused-prop-types": 2,
    "react/no-unused-state": 2,
    "react/require-default-props": 2,
    "arrow-body-style": ["error", "as-needed"],
    "import/no-anonymous-default-export": 0,
    "react/display-name": "off",
    "jsx-a11y/anchor-is-valid": "off",
    "semi": 1
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
